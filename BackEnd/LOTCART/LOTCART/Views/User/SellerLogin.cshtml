@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>LotKart - Seller Login</title>
  <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            height: 100vh;
            background: radial-gradient(circle at top, #0b1c3d, #020617);
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
        }

        .container {
            width: 380px;
            text-align: center;
        }

        .logo {
            margin-bottom: 40px;
        }

            .logo img {
                width: 110px;
                height: 110px;
                object-fit: contain;
            }

        .brandname {
            margin-top: 10px;
            font-size: 26px;
            font-weight: 600;
        }

        form input {
            width: 100%;
            padding: 18px;
            margin: 14px 0;
            border: none;
            border-radius: 40px;
            background: #cddbf2;
            font-size: 16px;
            outline: none;
        }

        .password-box {
            position: relative;
        }

            .password-box span {
                position: absolute;
                right: 22px;
                top: 50%;
                transform: translateY(-50%);
                cursor: pointer;
            }

        button {
            margin: 35px 0 20px;
            width: 100%;
            padding: 18px;
            border: none;
            border-radius: 40px;
            background: #0a3d78;
            color: white;
            font-size: 22px;
            cursor: pointer;
            box-shadow: 0 0 25px rgba(0, 140, 255, 0.4);
        }

            button:hover {
                background: #0d4c96;
            }

        .create {
            margin-top: 20px;
            color: #aaa;
        }

            .create a {
                text-decoration: none;
            }

            .create span {
                color: #ff2f6d;
                cursor: pointer;
            }

        .switch {
            margin-top: 40px;
            display: flex;
            justify-content: space-between;
            color: #ff2f6d;
            font-size: 15px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="logo">
            <img src="~/logo.png" alt="LotKart Logo" />
            <p class="brandname">LotKart Seller</p>
        </div>

        <form id="sellerLoginForm">
            <input type="text" id="sellerIdentifier" placeholder="Seller email or username" required />

            <div class="password-box">
                <input type="password" id="sellerPassword" placeholder="Password" required />
            </div>

            <button type="submit">Seller Log in</button>
        </form>

        <p class="create">
            New seller?
            <a href="sign_in_seller.html"><span>Create seller account</span></a>
        </p>

        <div class="switch">
            <span id="switchToUser">Switch to buyer account</span>
        </div>
    </div>

    <script>
                // --- REDIRECTS ---
        document.getElementById("switchToUser").addEventListener("click", () => {
            window.location.href = "log_in.html";
        });

        // --- SELLER LOGIN VERIFICATION ---
        function verifySellerLogin(id, pass) {
            // This mocks your 'Sellers' table in SQL
            const mockSeller = {
                name: "seller1",
                email: "seller@lotkart.com",
                password: "456"
            };

            if ((id === mockSeller.name || id === mockSeller.email) && pass === mockSeller.password) {
                return 1; // Success
            } else {
                return 0; // Fail
            }
        }

        // --- FORM SUBMISSION ---
        document.getElementById("sellerLoginForm").addEventListener("submit", (e) => {
            e.preventDefault();

            const idValue = document.getElementById("sellerIdentifier").value;
            const passValue = document.getElementById("sellerPassword").value;

            if (verifySellerLogin(idValue, passValue) === 1) {
                alert("Seller Login Successful! 🔥");
                // Redirect to wherever sellers manage their lots
                window.location.href = "home.html";
            } else {
                alert("Invalid Seller credentials. Try 'seller1' and '456'");
            }
        });
    </script>
</body>
</html>